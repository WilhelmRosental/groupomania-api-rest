{
  "name": "@groupomania/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Groupomania microservices - Enterprise Edition",
  "main": "dist/server.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "postbuild": "echo \"âœ… API Gateway build completed\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:e2e": "cross-env NODE_ENV=test npm run build && jest --testMatch=\"**/*.e2e.test.ts\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development node dist/server.js",
    "dev": "npm run build && npm run start:dev",
    "dev:watch": "nodemon --watch src --ext ts --exec \"npm run dev\"",
    "clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', {recursive: true, force: true});\"",
    "health": "curl -f http://localhost:${API_GATEWAY_PORT:-3000}/health || exit 1",
    "logs": "pm2 logs api-gateway --lines 100",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "security:audit": "npm audit --audit-level moderate",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run format:check && npm run typecheck"
  },
  "author": "Nathan Hallouin",
  "license": "MIT",
  "dependencies": {
    "@groupomania/shared": "file:../shared",
    "fastify": "^5.4.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/env": "^5.0.2",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.6.2",
    "jest": "^30.0.5",
    "@types/jest": "^30.0.0",
    "supertest": "^7.1.4",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}
